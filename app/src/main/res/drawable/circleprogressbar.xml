<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center">
        <shape
            android:shape="ring"
            android:thicknessRatio="75"
            android:useLevel="false">
            <size android:width="450dp" android:height="450dp"/>
            <gradient
                android:startColor="#00DF1616"
                android:centerColor="#00018786"
                android:endColor="#00F9A825"


                android:angle="45" />

        </shape>
    </item>
    <item android:gravity="center">
        <shape
            android:shape="ring"
            android:thicknessRatio="75"
            android:useLevel="false">
            <size android:width="450dp" android:height="450dp"/>
            <gradient
                android:startColor="#00DF1616"
                android:centerColor="#00F9A825"
                android:endColor="#39F9A825"

                android:type="linear"
                android:angle="90" />

        </shape>
    </item>

    <item android:gravity="center">
        <shape
            android:shape="ring"
            android:thicknessRatio="75"
            android:useLevel="false">
            <size android:width="450dp" android:height="450dp"/>
            <gradient
                android:startColor="#00F9A825"
                android:centerColor="#00F9A825"
                android:endColor="#FF8F00"

                android:type="linear"
                android:angle="0" />

        </shape>
    </item>
    <item  android:gravity="center_horizontal" >
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180">
            <shape
                android:shape="ring"
                android:thicknessRatio="30"
                android:useLevel="true">
                <size android:width="450dp" android:height="450dp"/>
                <corners android:radius="10dp"/>
                <gradient
                    android:startColor="#0CF9A825"
                    android:centerColor="#59F9A825"
                    android:endColor="#F9A825"


                    android:angle="180" />
            </shape>
        </rotate>
    </item>

    <item  android:gravity="center_horizontal" >
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180">
            <shape
                android:shape="ring"
                android:thicknessRatio="30"
                android:useLevel="true">
                <size android:width="450dp" android:height="450dp"/>
                <corners android:radius="10dp"/>
                <gradient
                    android:startColor="#39F9A825"
                    android:centerColor="#39F9A825"
                    android:endColor="#FF8F00"


                    android:angle="180" />
            </shape>
        </rotate>
    </item>

</layer-list>