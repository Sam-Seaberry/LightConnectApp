<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="180dp"
    android:orientation="horizontal">



        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="180dp"
            android:id="@+id/redframe"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="150dp"
            android:orientation="vertical">

                <SeekBar
                    android:id="@+id/redseek"
                    android:layout_width="150dp"
                    android:thumb="@drawable/style_seekbar_thumb"
                    android:progressTint="#FF0026"
                    android:layout_height="32dp"
                    android:max="255"
                    android:layout_gravity="center"
                    android:rotation="270"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="180dp"
            android:id="@+id/greenframe"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="90dp"
            android:orientation="vertical">

                <SeekBar
                    android:id="@+id/greenseek"
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:thumb="@drawable/style_seekbar_thumb_green"
                    android:progressTint="#4CFF00"
                    android:layout_gravity="center"
                    android:max="255"
                    android:rotation="270"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="32dp"
            android:id="@+id/blueframe"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

                <SeekBar
                    android:id="@+id/blueseek"
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/style_seekbar_thumb_blue"
                    android:progressTint="#000DFF"
                    android:max="255"
                    android:rotation="270"/>

        </FrameLayout>



</RelativeLayout>
